<% layout('/layouts/boilerplate') %>
<div class="row">
    <h1 class="text-center">New Book</h1>
    <div class="col-6 offset-3">
        <form action="/books/<%= book.isbn %>?_method=PUT" method="POST">
            <div class="mb-3">
                <label class="form-label" for="title">Title</label>
                <input class="form-control" type="text" id="title" name="book[title]" value="<%= book.title %>" >
            </div>
            <div class="mb-3">
                <label class="form-label" for="author">Author</label>
                <input class="form-control" type="text" id="author" name="book[author]" value="<%= book.author %>" >
            </div>
            <div class="mb-3">
                <label class="form-label" for="isbn">ISBN</label>
                <input class="form-control" type="text" id="isbn" name="book[isbn]" value="<%= book.isbn %>" >
            </div>
            <div class="mb-3">
                <label class="form-label" for="description">Description</label>
                <textarea class="form-control" type="text" id="description" name="book[description]"><%= book.description %></textarea>
            </div>
            <div class="mb-3">
                <label class="form-label" for="image">Image Url</label>
                <input class="form-control" type="text" id="image" name="book[imgUrl]" value="<%= book.imgUrl %>" >
            </div>
            <div class="mb-3">
                <button class="btn btn-success">Edit</button>
            </div>
        </form>
    </div>
</div>