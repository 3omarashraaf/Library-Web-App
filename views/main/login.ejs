<% layout('../layouts/homeBoilerplate') %>
<div class="row">
    <div class="card col-md-6 offset-md-3 my-5 col-xl-4 offset-xl-4">
        <div class="card-title text-center text-light mt-3"> <h2>Login</h2> </div>
        <div class="card-body">
            <form class="needs-validation" action="/login" method="POST" novalidate>
                <div class="mb-3">
                <label for="username" class="form-label text-light">Username</label>
                <input type="text" class="form-control" id="username" name="username" autofocus required>
                </div>
                <div class="mb-4">
                <label for="password" class="form-label text-light">Password</label>
                <input type="password" class="form-control" name="password" id="password" required>
                </div>
                <div class="d-grid gap-2 mb-4" >
                    <button  class="btn btn-success  btn-block">Login</button>
                </div>    
                <div class="mb-2 text-center">
                    <a class="text-decoration-none text-white-50" href="/register">Create New Account</a>                   
                </div>
            </form>
        </div>
    </div>
</div>


