<% layout('/layouts/boilerplate') %>
<div class="d-flex">
    <div class="cover-container d-flex w-100 h-100 p-3 mx-auto flex-column">
        <div class="row">
            <form class="input-group test mb-4" action="/books/search" method="POST">
                <input type="search" class="form-control rounded" name="searchKey" placeholder="Search" aria-label="q" aria-describedby="search-addon" />
                <button class="btn btn-outline-primary">search</button>
            </form>
            <% for(book of books) { %> 
                <div class="card mt-2 mx-2" style="width: 18rem;">
                    <div class="card-body">
                        <img src="<%= book.imgUrl %> " class="card-img-top" alt="...">
                        <h5 class="card-title mt-2"><%= book.title%></h5>
                        <h6 class="card-subtitle">by <%= book.author %></h5>
                        <p class="card-text"><%= book.description.slice(0,200) %>...</p>
                </div>
              </div>
            <% } %> 
        </div>
    </div>
</div>